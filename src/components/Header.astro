<header class="flex justify-between items-center px-4 py-5 w-full fixed top-0 left-0 right-0 bg-black/80 backdrop-blur-lg z-50">
    <!-- Menú desktop -->
    <nav class="hidden md:flex flex-row gap-x-10 mx-auto">
        <a href="#inicio" class="opacity-70 hover:opacity-100 transition-opacity duration-300">Inicio</a>
        <a href="#experiencia" class="opacity-70 hover:opacity-100 transition-opacity duration-300">Experiencia</a>
        <a href="#proyectos" class="opacity-70 hover:opacity-100 transition-opacity duration-300">Proyectos</a>
        <a href="#sobre-mi" class="opacity-70 hover:opacity-100 transition-opacity duration-300">Sobre mi</a>
        <a href="#contacto" class="opacity-70 hover:opacity-100 transition-opacity duration-300">Contacto</a>
    </nav>

    <!-- Botón hamburguesa (solo móvil) -->
    <button id="menu-toggle" class="md:hidden flex flex-col gap-1.5 p-2 ml-auto z-50" aria-label="Toggle menu">
        <span id="line1" class="block w-6 h-0.5 bg-white transition-all duration-300"></span>
        <span id="line2" class="block w-6 h-0.5 bg-white transition-all duration-300"></span>
        <span id="line3" class="block w-6 h-0.5 bg-white transition-all duration-300"></span>
    </button>

    <!-- Menú móvil -->
    <nav id="mobile-menu" class="md:hidden fixed top-[72px] left-0 right-0 bg-black/95 backdrop-blur-lg hidden">
        <div class="flex flex-col items-center gap-6 py-8">
            <a href="#inicio" class="mobile-link opacity-70 hover:opacity-100 transition-opacity duration-300 text-lg">Inicio</a>
            <a href="#experiencia" class="mobile-link opacity-70 hover:opacity-100 transition-opacity duration-300 text-lg">Experiencia</a>
            <a href="#proyectos" class="mobile-link opacity-70 hover:opacity-100 transition-opacity duration-300 text-lg">Proyectos</a>
            <a href="#sobre-mi" class="mobile-link opacity-70 hover:opacity-100 transition-opacity duration-300 text-lg">Sobre mi</a>
            <a href="#contacto" class="mobile-link opacity-70 hover:opacity-100 transition-opacity duration-300 text-lg">Contacto</a>
        </div>
    </nav>
</header>

<script is:inline>
    document.addEventListener('DOMContentLoaded', () => {
        const menuToggle = document.getElementById('menu-toggle');
        const mobileMenu = document.getElementById('mobile-menu');
        const mobileLinks = document.querySelectorAll('.mobile-link');
        const line1 = document.getElementById('line1');
        const line2 = document.getElementById('line2');
        const line3 = document.getElementById('line3');

        let isOpen = false;

        menuToggle?.addEventListener('click', () => {
            isOpen = !isOpen;
            
            if (isOpen) {
                // Mostrar menú
                mobileMenu?.classList.remove('hidden');
                // Animar a X
                line1.style.transform = 'rotate(45deg) translate(5px, 5px)';
                line2.style.opacity = '0';
                line3.style.transform = 'rotate(-45deg) translate(6px, -6px)';
            } else {
                // Ocultar menú
                mobileMenu?.classList.add('hidden');
                // Volver a hamburguesa
                line1.style.transform = 'none';
                line2.style.opacity = '1';
                line3.style.transform = 'none';
            }
        });

        // Cerrar menú al hacer clic en un link
        mobileLinks.forEach(link => {
            link.addEventListener('click', () => {
                isOpen = false;
                mobileMenu?.classList.add('hidden');
                line1.style.transform = 'none';
                line2.style.opacity = '1';
                line3.style.transform = 'none';
            });
        });
    });
</script>